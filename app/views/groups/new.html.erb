<div>
  <%= form_with(model: @group) do |form| %>

      <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.select :name, @categories, { :include_blank => '-- Select One --' }, class: "form-control", required: true %>
      </div>

      <div>
        <%= form.submit 'Add category' %>
      </div>

      <a href=<%= groups_path %> id="signup-btn">Back <i class="fa-solid fa-arrow-left"></i></i></a>
    <% end %>
  </div>
  <div>

</div>