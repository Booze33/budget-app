<div class="new-post">
  <%= form_with model: @activity, url: "/groups/#{@id}/activities" do |form| %>
    <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name, required: true %>
      </div>

      <div>
        <%= form.label :amount, style: "display: block" %>
        <%= form.number_field :amount, required: true %>
      </div>

      <div>
        <%= form.label :category, style: "display: block" %>
        <%= form.text_field :category, required: true, disabled: true, value: @name%>
      </div>

      <div>
        <%= form.submit "Add transaction" %>
      </div>
  <% end %>
  <%= link_to "Back", "/groups/#{@group.id}/activities", class: 'categories-button' %>
</div>